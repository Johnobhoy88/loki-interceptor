{
  "name": "loki-interceptor",
  "version": "1.0.0",
  "description": "AI Safety Interceptor with Scottish HR Compliance",
  "main": "main.js",
  "scripts": {
    "start": "npx start-server-and-test start:backend-api http://localhost:5002/health start:with-tunnel",
    "start:backend-api": "cd ../backend && python server.py",
    "start:with-tunnel": "npx concurrently \"npm run tunnel:create-and-run\" \"npm run start:ui\" --kill-others --success first",
    "start:ui": "electron .",
    "tunnel:create-and-run": "cd .. && .\\cloudflared.exe tunnel login && .\\cloudflared.exe tunnel create loki-demo && .\\cloudflared.exe tunnel route dns loki-demo localhost && .\\cloudflared.exe tunnel run loki-demo",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.highland.loki",
    "productName": "LOKI Interceptor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "../frontend/**/*",
      "../backend/**/*",
      "!../backend/__pycache__",
      "!../backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "start-server-and-test": "^2.0.3"
  }
}
