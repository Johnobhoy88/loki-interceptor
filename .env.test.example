# Test Environment Configuration for LOKI Platform
# Copy this file to .env.test and update as needed

# Database Configuration
TEST_DATABASE_URL=postgresql://loki:testpass@localhost:5433/loki_test
TEST_POSTGRES_DB=loki_test
TEST_POSTGRES_USER=loki
TEST_POSTGRES_PASSWORD=testpass
TEST_POSTGRES_PORT=5433

# Redis Configuration
TEST_REDIS_URL=redis://:testpass@localhost:6380/0
TEST_REDIS_PASSWORD=testpass
TEST_REDIS_PORT=6380

# API Endpoints
BACKEND_URL=http://localhost:5002
FRONTEND_URL=http://localhost:80
API_TIMEOUT=30

# Smoke Test Configuration
SMOKE_TEST_TIMEOUT=10

# Chaos Engineering Configuration
CHAOS_ENABLED=true
CHAOS_FAILURE_RATE=0.1
CHAOS_DELAY_MS=100
CHAOS_TIMEOUT=30

# Test Environment
TEST_ENV=local
CI=false
HEADLESS_BROWSER=true

# API Keys (for testing)
ANTHROPIC_API_KEY=test-key
OPENAI_API_KEY=test-key
GOOGLE_API_KEY=test-key

# Logging
LOG_LEVEL=info

# Testing Framework
PYTEST_TIMEOUT=300
PYTEST_WORKERS=auto
