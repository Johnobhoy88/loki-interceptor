# LOKI Environment Configuration
# Copy this file to .env and update with your actual values

# Application
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Database
POSTGRES_DB=loki
POSTGRES_USER=loki
POSTGRES_PASSWORD=changeme-use-strong-password
POSTGRES_PORT=5432

# Redis Cache
REDIS_PASSWORD=changeme-use-strong-password
REDIS_PORT=6379

# API Keys (Required)
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GOOGLE_API_KEY=your-google-key-here

# Backend Configuration
BACKEND_PORT=5002
WORKERS=4
MAX_WORKERS=4
CACHE_TTL=1800

# Frontend Configuration
FRONTEND_PORT=80
BACKEND_URL=http://backend:5002

# Security
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=http://localhost:*,https://*.yourdomain.com

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin-change-me

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_DOCUMENT_CORRECTION=true
ENABLE_SYNTHESIS=true
ENABLE_AUDIT_LOG=true

# Compliance Modules
ENABLE_HR_SCOTTISH=true
ENABLE_GDPR_UK=true
ENABLE_NDA_UK=true
ENABLE_TAX_UK=true
ENABLE_FCA_UK=true
