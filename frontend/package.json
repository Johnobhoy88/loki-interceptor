{
  "name": "loki-interceptor-frontend",
  "version": "2.0.0",
  "description": "LOKI Advanced Document Editor Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "jest --testPathPattern=tests/accessibility",
    "test:performance": "lighthouse-ci autorun",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:a11y",
    "analyze:bundle": "webpack-bundle-analyzer stats.json",
    "analyze:lighthouse": "lighthouse http://localhost:8080 --output=html --output-path=./reports/lighthouse.html",
    "serve": "python3 -m http.server 8080 --directory .",
    "serve:coverage": "python3 -m http.server 8081 --directory ./coverage/lcov-report"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.45.0",
    "react-diff-viewer-continued": "^3.3.1",
    "diff": "^5.1.0",
    "diff2html": "^3.4.45",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "html-docx-js": "^0.3.1",
    "jspdf": "^2.5.1",
    "prismjs": "^1.29.0",
    "zustand": "^4.4.7",
    "clsx": "^2.0.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-use": "^17.4.2",
    "date-fns": "^3.0.6",
    "framer-motion": "^10.16.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "app.js",
      "app-web.js",
      "!**/*.config.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/file-saver": "^2.0.7",
    "@types/diff": "^5.0.9",
    "@types/prismjs": "^1.26.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "@axe-core/playwright": "^4.8.3",
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "axe-core": "^4.8.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.13.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "html-validate": "^8.9.0",
    "lighthouse-ci": "^1.0.0",
    "@storybook/addon-a11y": "^7.5.3",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/builder-vite": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "eslint-plugin-storybook": "^0.6.15",
    "storybook": "^7.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
